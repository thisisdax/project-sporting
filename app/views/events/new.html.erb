<div class="container">
  <div class="jumbotron">
    <h1>Events#new</h1>
    <p>Find me in app/views/events/new.html.erb</p>
    <%= bootstrap_form_for :event, url: events_path do |p| %>
      <div class="row">
        <div class="col-md-6">
          <%= p.text_field :name, label: 'Name of Event', icon:'pencil' %>
        </div>
        <div class='col-md-2'>
          <!-- <%= p.text_field :region, label: 'Region', icon: 'map-marker' %> -->

          <%= p.collection_select :region, Tag.where("tag_category_id = ?", 0), :id, :value, label: 'Region' %>

        </div>
        <div class='col-md-2'>
          <!-- <%= p.text_field :location, label: 'Location', icon: 'map-marker' %> -->
          <%= p.collection_select :location, Tag.where("tag_category_id = ?", 1), :id, :value, label: 'Location' %>
        </div>
        <div class='col-md-2'>
          <!-- <%= p.text_field :type_of_sport, label: 'Type of Sport', icon: 'tags' %> -->
          <%= p.collection_select :type_of_sport, Tag.where("tag_category_id = ?", 2), :id, :value, label: 'Sports' %>
        </div>
        <div class='col-md-3'>
          <%= p.date_field :date, label: 'Date of Event', icon: 'calendar' %>
        </div>
        <div class='col-md-3'>
          <%= p.time_field :time, label: 'Time of Event', icon: 'time' %>
        </div>
        <div class='col-md-2'>
          <%= p.text_field :duration, label: 'Duration of Event', placeholder: 'E.g. 2 Hours', icon: 'hourglass' %>
        </div>
        <div class='col-md-2'>
          <%= p.text_field :minpax, label: 'Minimum Pax', icon: 'user' %>
        </div>
        <div class='col-md-2'>
          <%= p.text_field :maxpax, label: 'Maximum Pax', icon: 'user' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= p.text_area :description, label: 'Description', icon:'list-alt', rows: "5" %>
        </div>
      </div>
        <%= p.submit class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
